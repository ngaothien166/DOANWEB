@model DOANWEB.EF.Product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var detailid = "/Data/files/khoahoc/" + Model.Code + "_1.mp4";
    var detailid360 = "/Data/files/khoahoc/360_" + Model.Code + "_1.mp4";
    var detailid1080 = "/Data/files/khoahoc/1080_" + Model.Code + "_1.mp4";
    var TitleDetail = Model.Name;

    string[] arrListType = Model.ListType.Split(',');
    string[] arrListFile = Model.ListFile.Split('*');

    if (Convert.ToInt16(ViewBag.DetailID) > 0 && Convert.ToInt16(ViewBag.DetailID) <= arrListType.Length)
    {
        if (arrListType[Convert.ToInt16(ViewBag.DetailID) - 1].ToString() == "0")
        {
            detailid = "/Data/files/khoahoc/" + Model.Code + "_" + ViewBag.DetailID + ".mp4";
            detailid360 = "/Data/files/khoahoc/360_" + Model.Code + "_" + ViewBag.DetailID + ".mp4";
            detailid1080 = "/Data/files/khoahoc/1080_" + Model.Code + "_" + ViewBag.DetailID + ".mp4";

            TitleDetail = arrListFile[Convert.ToInt16(ViewBag.DetailID) - 1].ToString();
        }
        else
        {
            detailid = "/Data/files/khoahoc/" + Model.Code + "_" + ViewBag.DetailID + ".pdf";

            TitleDetail = arrListFile[Convert.ToInt16(ViewBag.DetailID) - 1].ToString();
        }
    }
    ViewBag.Title = TitleDetail;
    var videocount = 0;
}
